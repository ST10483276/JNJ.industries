<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="430dp"
        android:layout_height="343dp"
        android:background="@drawable/logoimage"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="302dp"
        android:layout_height="29dp"
        android:text="Empowering Skills. Building Futures."
        android:textAlignment="center"
        android:textColor="#003366"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/descriptionTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:text="Empowering the Nation is a community-based app that helps you access practical, life-changing training in first aid, sewing, cooking, life skills, and more. Explore our courses, calculate your training fees, and find a venue near you â€” all in one place."
        android:textColor="@color/black"
        android:textSize="20sp"
        android:lineSpacingExtra="4dp"
        android:textAlignment="viewStart"
        android:gravity="start"

        />

    <Button
        android:id="@+id/startBtn"
        android:layout_width="287dp"
        android:layout_height="82dp"
        android:backgroundTint="#003366"
        android:text="Start"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="24dp" />




</LinearLayout>