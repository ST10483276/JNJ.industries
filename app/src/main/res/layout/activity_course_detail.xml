<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".CourseDetailActivity">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#003366"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Courses"
            app:titleTextColor="@android:color/white" />

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Logo -->
                <ImageView
                    android:id="@+id/btnHomeScreen"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="30dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logoimage" />

                <!-- Six-Month Courses Button -->
                <Button
                    android:id="@+id/btnSixMonths"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    android:drawablePadding="8dp"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/white"
                    android:text="SIX-MONTH COURSES" />

                <!-- Six-Month Courses List -->
                <LinearLayout
                    android:id="@+id/layoutSixMonthsCourses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btnFirstAid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/grey"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:drawableEnd="@drawable/ic_arrow_forward"
                        android:text="First Aid" />

                    <Button
                        android:id="@+id/btnSewing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/grey"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:drawableEnd="@drawable/ic_arrow_forward"
                        android:text="Sewing" />

                    <Button
                        android:id="@+id/btnLandscaping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/grey"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:drawableEnd="@drawable/ic_arrow_forward"
                        android:text="Landscaping" />

                    <Button
                        android:id="@+id/btnLifeSkills"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/grey"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:drawableEnd="@drawable/ic_arrow_forward"
                        android:text="LifeSkills" />
                </LinearLayout>

                <!-- Six-Week Courses Button -->
                <Button
                    android:id="@+id/btnSixWeeks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    android:drawablePadding="8dp"
                    android:text="SIX-WEEK SHORT COURSES" />

                <!-- Six-Week Courses List -->
                <LinearLayout
                    android:id="@+id/layoutSixWeeksCourses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/dark_grey"
                    android:textColor="@color/black"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btnChildMinding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/dark_grey"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:drawableEnd="@drawable/ic_arrow_forward"
                        android:text="Child Minding" />

                    <Button
                        android:id="@+id/btnCooking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/dark_grey"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:drawableEnd="@drawable/ic_arrow_forward"
                        android:text="Cooking" />

                    <Button
                        android:id="@+id/btnGardenMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/dark_grey"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:drawableEnd="@drawable/ic_arrow_forward"
                        android:text="Garden Maintenance" />
                </LinearLayout>

                <!-- Course Selection -->
                <Button
                    android:id="@+id/BtnCourseSelection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:backgroundTint="@color/blue"

                    android:text="Course Selection"
                    android:textSize="22sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/nav_menu"
        app:headerLayout="@layout/nav_header" />

</androidx.drawerlayout.widget.DrawerLayout>
